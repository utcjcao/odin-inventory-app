<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
</head>
<body>

  <header>
    <h1>Search Page</h1>
  </header>

  <div class="search-form">
    <form action="/" method="GET">
      <input type="text" name="queryInput" placeholder="Search for an item...">
      <button type="submit">Search</button>
    </form>
  </div>

  <div class="results-container">
    <% if (results && results.length > 0) { %>
      <h2>Search Results:</h2>
      <% results.map(result => { %>
        <div class="result-card">
          <h3><%= result.name %></h3>
          <img src="<%= result.img %>" alt="<%= result.name %> picture">

        </div>
      <% }); %>
    <% } else { %>
      <h2>No results found</h2>
    <% } %>
  </div>

</body>
</html>
